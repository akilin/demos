<!DOCTYPE html>
<html lang='en'>
<head>
    <title>@ViewData["EmailTitle"]</title>
    <style type='text/css'>
        table {
            margin: auto;
            font-family: sans-serif;
            width: 50%;
            min-width: 320px;
            max-width: 530px;
            min-height: 430px;
            background-color: #ffffff;
            border-collapse: collapse;
            border-style: solid;
            color: #212529;
            border-color: #212529;
            border-width: 2px;
            line-height: 2;
        }

            table th {
                font-size: 21px;
            }

            table td {
                font-size: 18px;
            }

            table td,
            table th {
                border-width: 0;
                border-style: solid;
                padding: 12px 18px;
            }

                table td:last-of-type {
                    padding-bottom: 30px;
                }

            table thead {
                color: #fff;
                background-color: #212529;
            }

            table tbody td {
                text-align: center;
            }

            table a {
                margin-top: 30px;
                font-size: 20px;
                text-transform: uppercase;
                font-family: Verdana, Geneva, Tahoma, sans-serif;
                color: #4DABF7 !important;
                text-decoration: none;
                border: 1px solid #4DABF7;
                padding: 8px 24px;
                border-radius: 4px;
            }

                table a:hover {
                    background: #4DABF7;
                    color: #fff !important;
                }
    </style>
</head>
<body>
    <table>
        <thead>
            <tr>
                <th colspan='2'>@ViewData["EmailTitle"]</th>
            </tr>
        </thead>
        <tbody>
            @RenderBody()
        </tbody>
    </table>
</body>
</html>
